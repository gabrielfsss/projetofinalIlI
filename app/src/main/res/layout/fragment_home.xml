<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="#363636">


    <ImageView
        android:id="@+id/imageViewIcAviao"

        android:layout_width="50dp"
        android:layout_height="30dp"

        android:layout_margin="50dp"

        android:src="@drawable/ic_aviao" />

    <TextView
        android:id="@+id/textConfigAviao"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="120dp"
        android:layout_marginTop="55dp"

        android:text="Como usar o aplicativo?"
        android:textColor="#DCDCDC"
        android:textSize="16sp"
        />

    <ImageView
        android:id="@+id/imageViewIcPerigo"

        android:layout_width="50dp"
        android:layout_height="30dp"

        android:layout_below="@+id/imageViewIcAviao"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"

        android:src="@drawable/ic_perigo" />

    <TextView
        android:id="@+id/textConfigPerigo"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/textConfigAviao"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="87dp"

        android:text="Houve emergÃªncia?"
        android:textColor="#DCDCDC"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageViewIcEmpresa"

        android:layout_width="50dp"
        android:layout_height="30dp"

        android:layout_below="@+id/imageViewIcPerigo"
        android:layout_marginTop="77dp"
        android:layout_marginLeft="50dp"

        android:src="@drawable/ic_empresa" />

    <TextView
        android:id="@+id/textEmpresa"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/textConfigPerigo"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="87dp"

        android:text="O que nossa empresa fez?"
        android:textColor="#DCDCDC"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/ImageViewIcFilmes"

        android:layout_width="50dp"
        android:layout_height="30dp"

        android:layout_below="@+id/imageViewIcEmpresa"
        android:layout_marginTop="77dp"
        android:layout_marginLeft="50dp"

        android:src="@drawable/ic_filmes" />

    <TextView
        android:id="@+id/textFilmes"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/textEmpresa"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="87dp"

        android:text="Quer assistir a filmes?"
        android:textColor="#DCDCDC"
        android:textSize="16sp" />

</RelativeLayout>
